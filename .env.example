# Application
APP_NAME="WhatsApp Sender API"
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/whatsapp_sender

# Redis
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-change-in-production

# WhatsApp Business API
# Get these values from:  https://developers.facebook.com/apps/
WHATSAPP_ACCESS_TOKEN=your-access-token-here
WHATSAPP_BUSINESS_ACCOUNT_ID=your-waba-id-here
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id-here